page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx;
  margin-top: 0;
  padding: 40rpx 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.user-role {
  font-size: 26rpx;
  color: #999;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

/* 统计信息卡片 */
.stats-card {
  display: flex;
  margin: 20rpx;
  padding: 40rpx 30rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #07c160;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background-color: #e5e5e5;
}

/* 功能列表 */
.menu-list {
  margin-top: 20rpx;
}

.menu-group {
  margin: 20rpx;
  padding: 0;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

/* 退出登录按钮 */
.logout-btn {
  padding: 40rpx 20rpx;
}

.btn-logout {
  width: 100%;
  background-color: #fff;
  color: #ff3b30;
  border: none;
  border-radius: 16rpx;
  padding: 30rpx;
  font-size: 32rpx;
}
