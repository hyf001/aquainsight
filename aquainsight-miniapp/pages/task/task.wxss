page {
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

.task-header {
  background-color: #fff;
  padding: 20rpx 0;
  padding-top: calc(20rpx + env(safe-area-inset-top));
}

.task-tabs {
  display: flex;
  justify-content: space-around;
  padding: 0 30rpx;
}

.tab-item {
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #07c160;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #07c160;
  border-radius: 3rpx;
}

.task-list {
  flex: 1;
  padding: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.task-item {
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.task-header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.task-priority {
  padding: 8rpx 20rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.priority-high {
  background-color: #ffebee;
  color: #ff3b30;
}

.priority-medium {
  background-color: #fff3e0;
  color: #ff9500;
}

.priority-low {
  background-color: #e3f2fd;
  color: #007aff;
}

.task-time {
  font-size: 24rpx;
  color: #999;
}

.task-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.task-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.task-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-assignee {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}

.assignee-name {
  font-size: 26rpx;
  color: #666;
}

.task-status {
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
}

.status-pending {
  background-color: #fff3e0;
  color: #ff9500;
}

.status-processing {
  background-color: #e3f2fd;
  color: #007aff;
}

.status-completed {
  background-color: #e8f5e9;
  color: #07c160;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
