<view class="container">
  <!-- 顶部状态栏 -->
  <view class="header">
    <view class="header-title">Aquainsight中心</view>
    <view class="header-icons">
      <image class="icon" src="../../images/more.png" mode="aspectFit" bindtap="onMoreTap"></image>
      <image class="icon" src="../../images/settings.png" mode="aspectFit" bindtap="onSettingsTap"></image>
    </view>
  </view>

  <!-- 系统状态卡片 -->
  <view class="card status-card">
    <view class="status-header">
      <text class="status-label">系统状态:</text>
      <view class="status-badge {{systemStatus === '正常运行' ? 'status-normal' : 'status-error'}}">
        {{systemStatus}}
      </view>
    </view>
  </view>

  <!-- 告警统计卡片 -->
  <view class="card alarm-stats">
    <view class="alarm-item">
      <text class="alarm-label">今日告警:</text>
      <text class="alarm-count alarm-today">{{todayAlarmCount}}</text>
    </view>
    <view class="alarm-divider"></view>
    <view class="alarm-item">
      <text class="alarm-label">待办任务:</text>
      <text class="alarm-count alarm-pending">{{pendingTaskCount}}</text>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-grid">
    <view class="menu-item" wx:for="{{menuItems}}" wx:key="id" bindtap="onMenuTap" data-path="{{item.path}}">
      <view class="menu-icon-wrapper" style="background-color: {{item.bgColor}};">
        <image class="menu-icon" src="{{item.icon}}" mode="aspectFit"></image>
      </view>
      <text class="menu-text">{{item.name}}</text>
    </view>
  </view>
</view>
