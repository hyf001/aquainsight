<!--pages/login/login.wxml-->
<view class="login-container">
  <view class="logo-section">
    <text class="app-name">Aquainsight</text>
    <text class="app-desc">智慧水务监控平台</text>
  </view>

  <view class="form-section">
    <view class="input-group">
      <text class="input-label">手机号</text>
      <input
        class="input-field"
        type="number"
        placeholder="请输入手机号"
        value="{{phone}}"
        bindinput="onPhoneInput"
        maxlength="11"
      />
    </view>

    <view class="input-group">
      <text class="input-label">密码</text>
      <input
        class="input-field"
        type="password"
        placeholder="请输入密码"
        value="{{password}}"
        bindinput="onPasswordInput"
      />
    </view>

    <button
      class="login-btn"
      type="primary"
      bindtap="handleLogin"
      disabled="{{loading}}"
    >
      {{loading ? '登录中...' : '登录'}}
    </button>
  </view>

  <view class="footer">
    <text class="footer-text">首次登录请联系管理员</text>
  </view>
</view>
