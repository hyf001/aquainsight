/* pages/login/login.wxss */
page {
  background-color: #ffffff;
}

.login-container {
  min-height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  padding-top: calc(40rpx + env(safe-area-inset-top));
  box-sizing: border-box;
}

.logo-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx;
}

.app-name {
  font-size: 64rpx;
  font-weight: bold;
  color: #07c160;
  margin-bottom: 20rpx;
}

.app-desc {
  font-size: 28rpx;
  color: #666666;
}

.form-section {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border: 1px solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.login-btn {
  margin-top: 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.login-btn[disabled] {
  background: #cccccc;
}

.footer {
  flex: 1;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 40rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #999999;
}
